<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_graph"
    app:startDestination="@id/coinFragment">

    <fragment
        android:id="@+id/coinFragment"
        android:name="com.crypto.cryptoapp.feature_list_coins.CoinFragment"
        android:label="CoinFragment" >
        <action
            android:id="@+id/action_coinFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment" />

        <argument
            android:name="coinId"
            android:defaultValue=""
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/coinDetailFragment"
        android:name="com.crypto.cryptoapp.feature_coin_details.CoinDetailFragment"
        android:label="CoinDetailFragment" />
</navigation>